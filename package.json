{
  "name": "live-code-execution-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && tsc -p tsconfig.scripts.json",
    "start": "node dist/index.js",
    "db:init": "ts-node scripts/init-db.ts",
    "db:reset": "ts-node scripts/init-db.ts --force",
    "test:spam": "ts-node tests/integration/spam-protection.test.ts",
    "test:spam:docker": "cross-env API_URL=http://localhost:3000 ts-node tests/integration/spam-protection.test.ts",
    "test:race": "ts-node tests/integration/race-condition.test.ts",
    "test:race:docker": "cross-env API_URL=http://localhost:3000 ts-node tests/integration/race-condition.test.ts",
    "test:limits": "ts-node tests/integration/resource-limits.test.ts",
    "test:limits:docker": "cross-env API_URL=http://localhost:3000 ts-node tests/integration/resource-limits.test.ts",
    "test:all": "npm run test:race && npm run test:spam && npm run test:limits",
    "test:all:docker": "npm run test:race:docker && npm run test:spam:docker && npm run test:limits:docker",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuhDuy256/live-code-execution-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/BuhDuy256/live-code-execution-backend/issues"
  },
  "homepage": "https://github.com/BuhDuy256/live-code-execution-backend#readme",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.66.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.9.2",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "axios": "^1.13.2",    "cross-env": "^7.0.3",    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
